<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.cardee.custom.CustomRatingBar
        android:id="@+id/r_bookCarRating"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_margin="@dimen/medium_margin"
        app:halfStars="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxStars="5"
        app:onlyForDisplay="true" />

    <TextView
        android:id="@+id/tv_bookCarRatingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(10)"
        android:textColor="@color/item_secondary_txt"
        app:layout_constraintBottom_toBottomOf="@+id/r_bookCarRating"
        app:layout_constraintStart_toEndOf="@+id/r_bookCarRating"
        app:layout_constraintTop_toTopOf="@+id/r_bookCarRating" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/b_bookCar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginStart="@dimen/xxlarge_margin"
        android:background="@drawable/bg_button_blue"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_bookCarRatingCount"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_bookButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/renter_car_details_book_instantly"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_bookButtonInstant"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/small_margin"
                app:srcCompat="@drawable/ic_instant" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_bookCarRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:text="$10 - $15"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_bookCarRatePeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xsmall_margin"
        android:text="per hour"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_small"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bookCarRate"
        app:layout_constraintStart_toEndOf="@+id/tv_bookCarRate" />

</android.support.constraint.ConstraintLayout>