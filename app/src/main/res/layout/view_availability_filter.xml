<?xml version="1.0" encoding="utf-8"?>
<com.cardee.renter_availability_filter.AvailabilityFilterView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/availabilityTabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/bg_rounded_top_underlined"
        android:theme="@style/Tabs"
        app:tabTextAppearance="@style/TextNotCaps"
        app:tabTextColor="@color/divider_light" />

    <android.support.v4.view.ViewPager
        android:id="@+id/availabilityPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</com.cardee.renter_availability_filter.AvailabilityFilterView>