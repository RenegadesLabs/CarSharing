<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/sort_container"
        android:layout_width="0dp"
        android:layout_height="@dimen/floating_widget_height"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="@dimen/floating_widget_horizontal"
        android:layout_marginEnd="@dimen/floating_widget_horizontal"
        android:background="@drawable/bg_rounded_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/sort_container_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider"
        app:layout_constraintBottom_toBottomOf="@id/sort_container"
        app:layout_constraintEnd_toEndOf="@id/sort_container"
        app:layout_constraintStart_toStartOf="@id/sort_container"
        app:layout_constraintTop_toTopOf="@id/sort_container" />

    <View
        android:id="@+id/btn_sort"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/sort_container"
        app:layout_constraintEnd_toStartOf="@id/sort_container_divider"
        app:layout_constraintStart_toStartOf="@id/sort_container"
        app:layout_constraintTop_toTopOf="@id/sort_container" />

    <View
        android:id="@+id/btn_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/sort_container"
        app:layout_constraintEnd_toEndOf="@id/sort_container"
        app:layout_constraintStart_toEndOf="@id/sort_container_divider"
        app:layout_constraintTop_toTopOf="@id/sort_container" />

</android.support.constraint.ConstraintLayout>