<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/b_changeBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="@string/change_pass_title"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/xxlarge_margin"
        android:gravity="center_horizontal"
        android:text="@string/change_pass_text"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_changePass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/CardeeLoginEditTextStyle"
        android:layout_marginEnd="@dimen/xlarge_margin"
        android:layout_marginStart="@dimen/xlarge_margin"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorAccent"
        android:hint="@string/change_pass_new_pass"
        android:inputType="textPassword"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_changePassConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/CardeeLoginEditTextStyle"
        android:layout_marginEnd="@dimen/xlarge_margin"
        android:layout_marginStart="@dimen/xlarge_margin"
        android:textColor="@color/colorAccent"
        android:hint="@string/change_pass_confirm_pass"
        android:inputType="textPassword"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_changePass"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/b_changePass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/xlarge_margin"
        android:layout_marginStart="@dimen/xlarge_margin"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_white_bg"
        android:text="@string/change_pass_title"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_changePassConfirm" />

</android.support.constraint.ConstraintLayout>