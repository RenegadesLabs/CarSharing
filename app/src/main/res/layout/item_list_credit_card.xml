<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_card_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/brandIcon"
        android:layout_width="34dp"
        android:layout_height="22dp"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardNumber"
        style="@style/TextSettingsRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="12dp"
        android:text="0000 4242"
        app:layout_constraintStart_toEndOf="@id/brandIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/primaryMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Primary"
        android:textColor="@color/divider_dark"
        android:textSize="11sp"
        app:layout_constraintBaseline_toBaselineOf="@id/cardNumber"
        app:layout_constraintStart_toEndOf="@id/cardNumber" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_right" />
</android.support.constraint.ConstraintLayout>
