<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/sort_menu_title"
        style="@style/ModalMenuTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modal_menu_title_height"
        android:background="@android:color/transparent"
        android:text="@string/booking_sort_title"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/cars_sort_distance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/cars_sort_distance"
        style="@style/ModalMenuItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modal_menu_item_height"
        android:background="@drawable/bg_modal_menu_top"
        android:checked="true"
        android:text="@string/cars_browse_sort_distance"
        app:layout_constraintTop_toBottomOf="@+id/sort_menu_title" />

    <ImageView
        android:id="@+id/cars_sort_distance_selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/widget_margin_mid"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/cars_sort_distance"
        app:layout_constraintEnd_toEndOf="@id/cars_sort_distance"
        app:layout_constraintTop_toTopOf="@id/cars_sort_distance"
        app:srcCompat="@drawable/ic_check" />

    <TextView
        android:id="@+id/cars_sort_price"
        style="@style/ModalMenuItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modal_menu_item_height"
        android:background="@drawable/bg_modal_menu_mid"
        android:text="@string/cars_browse_sort_price"
        app:layout_constraintTop_toBottomOf="@+id/cars_sort_distance" />

    <ImageView
        android:id="@+id/cars_sort_price_selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/widget_margin_mid"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/cars_sort_price"
        app:layout_constraintEnd_toEndOf="@id/cars_sort_price"
        app:layout_constraintTop_toTopOf="@id/cars_sort_price"
        app:srcCompat="@drawable/ic_check" />

    <TextView
        android:id="@+id/cars_sort_ratings"
        style="@style/ModalMenuItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modal_menu_item_height"
        android:background="@drawable/bg_modal_menu_mid"
        android:text="@string/cars_browse_sort_ratings"
        app:layout_constraintTop_toBottomOf="@+id/cars_sort_price" />

    <ImageView
        android:id="@+id/cars_sort_ratings_selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/widget_margin_mid"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/cars_sort_ratings"
        app:layout_constraintEnd_toEndOf="@id/cars_sort_ratings"
        app:layout_constraintTop_toTopOf="@id/cars_sort_ratings"
        app:srcCompat="@drawable/ic_check" />

    <TextView
        android:id="@+id/cars_sort_popularity"
        style="@style/ModalMenuItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modal_menu_item_height"
        android:background="@drawable/bg_modal_menu_bottom"
        android:text="@string/cars_browse_sort_popularity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cars_sort_ratings" />

    <ImageView
        android:id="@+id/cars_sort_popularity_selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/widget_margin_mid"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/cars_sort_popularity"
        app:layout_constraintEnd_toEndOf="@id/cars_sort_popularity"
        app:layout_constraintTop_toTopOf="@id/cars_sort_popularity"
        app:srcCompat="@drawable/ic_check" />

</android.support.constraint.ConstraintLayout>