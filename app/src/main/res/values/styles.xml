<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="PreviewTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CardeeEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/white_opacity60</item>
        <item name="textColorError">@color/red_error</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white_opacity60</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="CardeeTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/white_opacity60</item>
        <item name="textColorError">@color/red_error</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white_opacity60</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
