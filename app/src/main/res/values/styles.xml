<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlackTheme" parent="AppTheme">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="PreviewTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CardeeToolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/bg_main</item>
    </style>

    <style name="CardeeLoginEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/white_opacity60</item>
        <item name="textColorError">@color/red_error</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white_opacity60</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="CardeeEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="textColorError">@color/red_error</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="CardeeEditTextWithoutUnderlineStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="CardeeTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="textColorError">@color/red_error</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="CardeeLoginTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/white_opacity60</item>
        <item name="textColorError">@color/red_error</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white_opacity60</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="CardeeProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="RoundedButton">
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/text_button_regular</item>
        <item name="android:paddingStart">@dimen/button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/widget_margin_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RegularButton">
        <item name="android:background">@drawable/bg_button_regular</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/text_button_regular</item>
        <item name="android:paddingStart">@dimen/button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/button_horizontal_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SelectorItem" parent="RegularButton">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textSize">@dimen/list_item_selector_value</item>
        <item name="android:textColor">@color/toggling_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SelectorButton" parent="RegularButton">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textSize">@dimen/list_item_selector_value</item>
        <item name="android:textColor">@color/toggling_text_color</item>
        <item name="android:paddingStart">@dimen/widget_padding_xx_large</item>
        <item name="android:paddingEnd">@dimen/widget_padding_xx_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Switch" parent="AppTheme">
        <item name="colorAccent">@color/main_enabled</item>
    </style>

    <style name="LoadingIndicator" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Tabs" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Dialog" parent="AlertDialog.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ModalMenuItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/widget_padding_mid</item>
        <item name="android:paddingEnd">@dimen/widget_padding_mid</item>
        <item name="android:textSize">@dimen/list_item_text_general</item>
        <item name="android:textColor">@color/text_enabled</item>
    </style>

    <style name="ModalMenuTitle" parent="ModalMenuItem">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/list_item_selector_value</item>
        <item name="android:textColor">@color/modal_menu_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/bg_main</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarAction">
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/bg_main</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:layout_marginEnd">@dimen/widget_margin_regular</item>
    </style>

    <style name="TextInfo">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/text_regular</item>
    </style>

    <style name="TextTitle" parent="TextInfo">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextTitleBold" parent="TextTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubtitle" parent="TextInfo">
        <item name="android:textColor">@color/text_subtitle</item>
    </style>

    <style name="TextClickable" parent="TextInfo">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="NoteChangeTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/text_enabled</item>
        <item name="textColorError">@color/red_error</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="TextSettingsSection">
        <item name="android:textColor">@color/item_secondary_txt</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSettingsInactive">
        <item name="android:textColor">@color/text_account_settings</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="TextSettingsLarge">
        <item name="android:textColor">@color/text_owner_profile_name</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextSettingsRegular">
        <item name="android:textColor">@color/text_owner_profile_name</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="TextSettingsSmall">
        <item name="android:textColor">@color/text_owner_profile_name</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextClickableRed" parent="TextInfo">
        <item name="android:textColor">@color/red_error</item>
    </style>

    <style name="ChangePassEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/text_account_settings</item>
        <item name="textColorError">@color/red_error</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/text_account_settings</item>
        <item name="colorControlActivated">@color/text_account_settings</item>
    </style>

    <style name="ChatEditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/text_account_settings</item>
        <item name="textColorError">@color/red_error</item>
        <item name="colorAccent">@color/text_account_settings</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/text_account_settings</item>
    </style>

    <style name="NumberPicker" parent="AppTheme">
        <item name="android:textColorPrimary">@color/blue</item>
    </style>

    <style name="AppCompatAlertDialogTheme" parent="AppTheme">
        <item name="android:textColorAlertDialogListItem">@color/blue</item>
        <item name="textColorAlertDialogListItem">@color/blue</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="InboxTabItemTextStyle">
        <item name="android:textColor">@color/bg_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="InboxTabItemImageStyle">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="InboxTabItemDotStyle">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="RatingBar" parent="AppTheme">
        <item name="colorControlActivated">@color/rate_star</item>
    </style>

    <style name="ChatStyle" parent="AppTheme">
        <item name="colorAccent">@color/main_enabled</item>
    </style>

    <style name="FilterTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabTextAppearance">@style/FilterTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/text_owner_profile_name</item>
    </style>

    <style name="FilterTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/divider_dark</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
